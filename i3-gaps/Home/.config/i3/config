# MODKEYS
set $mod Mod4
set $alt Mod1
set $tab Tab

###############################
#         APPEARENCE          #
###############################

# Default font
font pango:DejaVu Sans Mono 8

# Wallpaper
exec_always --no-startup-id feh --bg-scale ~/Pictures/.wallpaper/wall_S15-16.png

# Focus mouse over
focus_follows_mouse no

# colors
set_from_resource $active active
set_from_resource $innactive innactive
set_from_resource $background background
set_from_resource $foreground foreground

# class                 border          backgr.         text            indicator       child_border
client.focused          $innactive      $innactive      $background     #FFFFFF         $active
client.unfocused        $background     $background     $innactive      $background     $innactive

client.focused_inactive $background     $background     $innactive      #484e50         $innactive
client.urgent           $active         $active         $background     #900000         $active
client.placeholder      $background     $background     $foreground     #000000         $innactive
client.background       $background

###############################
#         KEYBINDING          #
###############################

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a launcher
bindsym $alt+space exec rofi -show drun -display-drun "Run " -display-run ">_ " -display-window "Win "

# start a terminal
bindsym $mod+Return exec urxvt

# start a file manager
bindsym $mod+p exec thunar

# kill focused window
bindsym $alt+F4 kill

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+m focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+M move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split mode
bindsym $mod+h split h
bindsym $mod+v split v

# modes
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+x layout toggle split
bindsym $mod+w floating toggle
bindsym $mod+r mode "resize"

# resize window
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape
        bindsym Escape mode "default"
}

# change focus between tiling / floating windows
bindsym $alt+$tab focus mode_toggle

# focus the parent container
bindsym $mod+q focus parent

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Audio
bindsym XF86AudioRaiseVolume exec "sh -c '~/.scripts/notify/change-volume up'"
bindsym XF86AudioLowerVolume exec "sh -c '~/.scripts/notify/change-volume down'"
bindsym XF86AudioMute exec "sh -c '~/.scripts/notify/change-volume mute'"

# Play / Pause Spotify
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Brightness
bindsym XF86MonBrightnessUp exec "sh -c '~/.scripts/notify/change-brightness up'"
bindsym XF86MonBrightnessDown exec "sh -c '~/.scripts/notify/change-brightness down'"

# Screenshot
bindsym Print exec "scrot '%Y-%m-%d-%T-scrot.png' -e 'mv $f ~/Pictures/Scrot-Captures/' -q 100 -d 3"

###############################
#        WORKSPACES           #
###############################

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+ampersand move container to workspace $ws1
bindsym $mod+Shift+eacute move container to workspace $ws2
bindsym $mod+Shift+quotedbl move container to workspace $ws3
bindsym $mod+Shift+apostrophe move container to workspace $ws4
bindsym $mod+Shift+parenleft move container to workspace $ws5
bindsym $mod+Shift+minus move container to workspace $ws6
bindsym $mod+Shift+egrave move container to workspace $ws7
bindsym $mod+Shift+underscore move container to workspace $ws8
bindsym $mod+Shift+ccedilla move container to workspace $ws9
bindsym $mod+Shift+agrave move container to workspace $ws10

